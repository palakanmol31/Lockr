<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:text="Enable Unlocking"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:id="@+id/lockText"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:checked="false"
            android:id="@+id/timeLock"
            android:layout_weight="0.16" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Get Current Location and City Name"
        android:id="@+id/getLocation"
        android:layout_weight="0.20"
        android:visibility="invisible"
        android:gravity="center"
        android:textSize="20sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.33"
        android:id="@+id/editTextLocation"
        android:visibility="invisible"
        android:editable="false">
        <requestFocus></requestFocus>
    </EditText>
    <LinearLayout
        android:id="@+id/layButtonH"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:gravity="center"
        android:layout_weight="0.15">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Location"
            android:visibility="invisible"
            android:id="@+id/btnLocation"></Button>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layloadingH"
        android:layout_height="wrap_content"
        android:layout_weight="0.20"
        android:layout_width="fill_parent"
        android:gravity="center">
        <ProgressBar
            android:layout_width="wrap_content"
            android:id="@+id/progressBar1"
            android:visibility="invisible"
            android:layout_height="wrap_content"></ProgressBar>
    </LinearLayout>
</LinearLayout>

