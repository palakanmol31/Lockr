<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:padding="2dp"
        android:text="Set your new password"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Draw New Pattern"
        android:padding="2dp"
        android:gravity="center"
        android:background="#ADD8E6"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <com.bcgdv.asia.lib.connectpattern.ConnectPatternView
        android:id="@+id/connect"
        android:padding="32dp"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        app:connectPatternCircleColor="@color/colorPrimaryDark"
        app:connectPatternLineColor="@color/colorPrimaryDark"
        app:connectPatternNumber="nine"
        app:connectPatternCircleRadius="14dp"
        app:connectPatternLineWidth="7dp"/>
    <!--<com.takwolf.android.lock9.Lock9View-->
        <!--android:id="@+id/lock_9_view"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--app:nodeSrc="@drawable/lock_9_view_node_normal"-->
        <!--app:nodeOnSrc="@drawable/lock_9_view_node_highlighted"-->
        <!--app:lineColor="#ff006699"-->
        <!--app:lineWidth="8dp" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"></View>

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"></View>

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"></View>

    </LinearLayout>


</LinearLayout>
