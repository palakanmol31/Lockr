<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center">


    <TextView
        android:text="Draw your pattern to unlock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textAppearance="@style/TextAppearance.AppCompat.Button" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:text="draw pattern"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="@color/white" />

    <com.bcgdv.asia.lib.connectpattern.ConnectPatternView
        android:id="@+id/connect"
        android:padding="32dp"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        app:connectPatternCircleColor="@color/colorPrimaryDark"
        app:connectPatternLineColor="@color/colorPrimaryDark"
        app:connectPatternNumber="nine"
        app:connectPatternCircleRadius="14dp"
        app:connectPatternLineWidth="7dp"/>

    <Button
        android:text="Forgot password?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/forget_password"
        android:background="#ADD8E6"/>

</LinearLayout>
