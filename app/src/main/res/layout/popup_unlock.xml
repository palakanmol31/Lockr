<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_lock"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:layout_width="111dp"
        android:layout_height="96dp"
        android:background="@drawable/splash_img_small_icon" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:text="draw_pattern"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="@color/white"
        tools:text="Draw Pattern" />

    <com.takwolf.android.lock9.Lock9View
        android:id="@+id/lock_9_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:nodeSrc="@drawable/lock_9_view_node_normal"
        app:nodeOnSrc="@drawable/lock_9_view_node_highlighted"
        app:lineColor="#ff006699"
        app:lineWidth="8dp" />

    <Button
        android:text="Forget_Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Forget_Password" />

</LinearLayout>
